#!/bin/bash

echo"${#} arguments were passed to the script. They were ${@}"
exit

echo -e "\nThe first argument you entered was $1, the second $2, and the third $3\n"
shift
echo "Shifting..."
sleep 1
echo -e "\nThe first argument you entered was $1, the second $2, and the third $3\n"

#The 0 element is reserved for the command itself

#In order to enter the parameters when the script is called, they're not really referenced or even comma separated

#./posParam.sh Mike Mitch Molly

#would output

#The first argument you entered was Mike, the second Mitch, and the third Molly

